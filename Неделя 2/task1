#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    /*
    Вариант 9
    Задача 8с
    Вычислить значение выражения
    ((х+1)^2)+3(х+1) при а) x=1.7; б) x=3. Ответ: а) 15.39 б) 28
    */

    float x;

    std::cout << "Solve function. \n"
                 "Enter x: ";
    std::cin >> x;

    float f = (x + 1)*(x + 1) + 3*(x + 1);

    std::cout << "x = " << x << std::endl
                 << "f = " << f << std::endl;
    std::getchar();  // ожидание ввода, чтобы прога
    std::getchar();  // не закрывалась после выполнения

    return 0;
    }
